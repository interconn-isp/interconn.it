- provide :title, 'Copertura InterConn'
- provide :body_id, 'coverage'
- provide :navbar_classes, 'navbar-inverse'

#map-canvas

#map-overlay
  #map-overlay-inner
    .container
      .heading
        %h1.heading-title Copertura del servizio
        %h3.heading-description Se ancora non ci siamo, ci saremo tra poco!

    .container.contained
      .coverage-check-form
        .form-group
          .input-group.input-group-lg
            %input.form-control.input-flat#coverage-address(placeholder='Inserisci il tuo indirizzo...')

            %span.input-group-addon.check-status-standby#check-status
              In attesa

- content_for :javascripts do
  = javascript_include_tag '//maps.googleapis.com/maps/api/js?libraries=places'
  = javascript_include_tag asset_path('pages/coverage.js')
