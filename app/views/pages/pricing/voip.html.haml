- provide :title, 'InterConn VoIP'
- provide :body_id, 'pricing-voip'

= render 'pages/pricing/navigation'

.container
  %section
    .heading
      %h1.heading-title VoIP: telefona via internet.
      %h3.heading-description Con i nostri contratti chiami ovunque a costi irrisori.

    .row.pricing-tables-container
      .col-xs-12.pricing-table-container
        .pricing-table-container-inner
          %ul.pricing-table
            %li.product-name InterConn VoIP
            %li.product-price
              %span.price-currency €
              %span.price-digits 3
              %span.price-interval / mese*

            %li.product-feature
              %ul
                %li.feature-desc Locali e nazionali
                %li.feature-numbers €0,018 / min*

            %li.product-feature
              %ul
                %li.feature-desc Operatori mobili
                %li.feature-numbers €0,011 / min*

            %li.product-feature.product-feature-optional
              %ul
                %li.feature-desc Apparato preconfigurato
                %li.feature-numbers €68,00 u.t.*

            %li.product-feature.product-feature-optional
              %ul
                %li.feature-desc Costo di portabilità
                %li.feature-numbers €35,00 u.t.*

            %li.product-action
              = link_to "Attiva Offerta", '#', class: 'btn btn-orange btn-lg btn-transition'

    .row.asterisks-explanation
      .col-xs-12
        %ul.list-unstyled
          %li * Prezzo da intendersi IVA inclusa
