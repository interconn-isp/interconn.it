- provide :title, 'WADSL'
- provide :body_id, 'pricing-wadsl'

= render 'pages/pricing/navigation'

.container
  %section
    .heading
      .container
        %h1.heading-title WADSL: veloce e affidabile.
        %h3.heading-description L'ideale per sbrigare le faccende di ogni giorno.

    .row.pricing-tables-container
      .col-xs-12.col-sm-6.col-md-3.pricing-table-container
        .pricing-table-container-inner
          %ul.pricing-table
            %li.product-name 7 Mega Privati
            %li.product-price
              %span.price-currency €
              %span.price-digits 24
              %span.price-interval / mese*

            %li.product-feature
              %ul
                %li.feature-desc Installazione
                %li.feature-numbers €180 u.t.*

            %li.product-feature.product-feature-2x
              %ul
                %li.feature-desc Velocità di picco
                %li.feature-numbers 7 Mbps / 1 Mbps

            %li.product-feature.product-feature.product-feature-optional
              %ul
                %li.feature-desc IP statico
                %li.feature-numbers €6 / mese*

            %li.product-action
              = link_to "Attiva Offerta", new_inquiry_path(product: 'wadsl-7mega-privati'), class: 'btn btn-orange btn-lg btn-transition'

      .col-xs-12.col-sm-6.col-md-3.pricing-table-container
        .pricing-table-container-inner
          %ul.pricing-table
