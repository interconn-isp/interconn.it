#navbar-affix
  %nav.navbar.navbar-fixed-top.navbar-default(role='navigation')
    .container
      .navbar-header
        %button.navbar-toggle(type='button' data-toggle='collapse' data-target='#navbar-collapse')
          %span.sr-only Commuta navigazione
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        = link_to "#{image_tag('logo-full.svg')}".html_safe, root_path, class: 'navbar-brand'

      .collapse.navbar-collapse#navbar-collapse
        .navbar-right
          %ul.nav.navbar-nav
            %li{class: "#{'active' if params[:id] && params[:id][0..7] == 'pricing/'}"}= link_to 'Piani', pricing_path
            %li{class: "#{'active' if params[:id] && params[:id] == 'projects'}"}= link_to 'Progetti', projects_path
            %li{class: "#{'active' if params[:id] == 'coverage'}"}= link_to 'Copertura', coverage_path
            %li{class: "#{'active' if params[:id] && params[:id][0..2] == 'faq'}"}= link_to 'Domande frequenti', faq_path
            %li{class: "#{'active' if params[:controller] == 'tickets'}"}= link_to 'Contatti', contact_path

          %ul.nav.navbar-nav
            %li.navbar-nav-action= link_to 'Inizia la tua prova!', new_inquiry_path
