.feature-list.feature-list-inverted
  - features.each_with_index do |feature, index|
    %div{class: "feature #{'feature-hug-jumbotron' if (index + 1) == features.size}"}
      .container.contained
        .row
          .col-xs-12.col-md-4.feature-icon-container
            = image_tag "ballicons/#{feature['icon']}.svg", class: 'feature-icon'

          .col-xs-12.col-md-8
            %h3= feature['name']
            %p= feature['content']

            %p
              %strong= feature['headline']
