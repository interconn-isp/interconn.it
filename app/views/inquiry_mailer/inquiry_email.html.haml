%dl
  %dt= t('mailers.inquiry.full_name')
  %dd= @inquiry.full_name

  %dt= t('mailers.inquiry.email')
  %dd= @inquiry.email

  %dt= t('mailers.inquiry.phone')
  %dd= @inquiry.phone

  %dt= t('mailers.inquiry.address')
  %dd= @inquiry.address

  %dt= t('mailers.inquiry.product')
  %dd
    - plan = Plan.find_by_slug(@inquiry.product_value)
    = plan ? plan.full_name : @inquiry.product_value

  - if @inquiry.notes.present?
    %dt= t('mailers.inquiry.notes')
    %dd= simple_format @inquiry.notes

  - if @inquiry.referer.present?
    %dt= t('mailers.inquiry.referer')
    %dd= @inquiry.referer
