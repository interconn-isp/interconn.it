- provide :body_id, 'contact'
- provide :title, 'Contatti'

.heading.heading-bordered
  .container
    %h1.heading-title Contatti e supporto
    %h3.heading-description Fatti avanti, siamo qui per aiutare!

.telephones
  .container
    .row
      .col-xs-12.col-sm-4.telephone
        .telephone-note Numero verde gratuito
        .telephone-number 800-193724

      .col-xs-12.col-sm-4.telephone
        .telephone-note Da cellulari e dall'estero
        .telephone-number 06-83390315

      .col-xs-12.col-sm-4.telephone
        .telephone-note Comunicazioni via fax
        .telephone-number 06-62204896

.container.contained-sm#contact-form
  .row
    .col-xs-12
      - if @ticket.persisted?
        %h3 Messaggio inviato

        %p
          Il tuo messaggio Ã¨ stato inviato con successo! Riceverai una
          risposta in men che non si dica.
      - else
        %h3 Scrivici

        = simple_form_for(@ticket, url: contact_path) do |f|
          = f.input :full_name, input_html: { class: 'input-lg' }
          = f.input :phone, input_html: { class: 'input-lg' }
          = f.input :email, input_html: { class: 'input-lg' }
          = f.input :category, input_html: { class: 'input-lg' }
          = f.input :subject, input_html: { class: 'input-lg' }
          = f.input :message, input_html: { class: 'input-lg', id: 'message' }

          .text-right
            %button.btn.btn-lg.btn-blue-light(type='submit') Contattaci

.huge-social-icons.hsi-last
  .container-fluid
    .row
      .col-xs-6.col-md-3.social-icon.si-facebook
        = link_to(fa_icon('facebook', class: 'fa-fw'), ENV['FACEBOOK_URL'])

      .col-xs-6.col-md-3.social-icon.si-twitter
        = link_to(fa_icon('twitter', class: 'fa-fw'), ENV['TWITTER_URL'])

      .col-xs-6.col-md-3.social-icon.si-google-plus
        = link_to(fa_icon('google-plus', class: 'fa-fw'), ENV['GOOGLE_PLUS_URL'])

      .col-xs-6.col-md-3.social-icon.si-skype
        = link_to(fa_icon('skype', class: 'fa-fw'), ENV['SKYPE_URL'])
